{
  "name": "pump-it-up",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "packages/server",
    "packages/web"
  ],
  "scripts": {
    "dev": "yarn workspace @pump-it-up/server dev",
    "dev:server": "yarn workspace @pump-it-up/server dev",
    "dev:web": "yarn workspace @pump-it-up/web dev",
    "test": "yarn workspace @pump-it-up/server test",
    "build": "yarn workspaces run build",
    "typecheck": "yarn workspaces run typecheck",
    "test:e2e": "yarn workspace @pump-it-up/server test:e2e",
    "test:e2e:base": "APP_NETWORK=base yarn test:e2e",
    "test:e2e:base-sepolia": "APP_NETWORK=base-sepolia yarn test:e2e",
    "test:e2e:doppler": "doppler run --project openclaw --config dev -- yarn test:e2e:base && doppler run --project openclaw --config dev -- yarn test:e2e:base-sepolia",
    "ci": "yarn workspace @pump-it-up/server typecheck && yarn test:e2e:base && yarn test:e2e:base-sepolia"
  }
}
